{
    "name": "alumpro/management-system",
    "description": "Aluminum Profile and Glass Management System",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "twilio/sdk": "^7.0",
        "phpmailer/phpmailer": "^6.0",
        "tecnickcom/tcpdf": "^6.4",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Alumpro\\": "src/",
            "App\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled --ansi || true",
            "php artisan optimize --ansi || true"
        ]
    }
}